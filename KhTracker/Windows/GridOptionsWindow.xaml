<!-- GridOptionsWindow.xaml -->
<Window x:Class="KhTracker.GridOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid Tracker Options" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel>
            <ItemsControl ItemsSource="{Binding}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding CategoryName}" Width="Auto" HorizontalAlignment="Stretch" Background="#D3D3D3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Column="0" Grid.Row="0" x:Name="TextBoxRows" Text="Enter text..." GotFocus="SetNumRows" LostFocus="TextBox_LostFocus"/>
                                <!--<CheckBox Content="Option 1" Grid.Column="0" Grid.Row="0"/>-->
                                <TextBox Grid.Column="1" Grid.Row="0" x:Name="TextBoxColumns" Text="Enter text..." GotFocus="SetNumColumns" LostFocus="TextBox_LostFocus"/>
                                <CheckBox Content="Option 3" Grid.Column="2" Grid.Row="0"/>
                                <CheckBox Content="Option 4" Grid.Column="0" Grid.Row="1"/>
                                <CheckBox Content="Option 5" Grid.Column="1" Grid.Row="1"/>
                                <CheckBox Content="Option 6" Grid.Column="2" Grid.Row="1"/>
                                <CheckBox Content="Option 7" Grid.Column="0" Grid.Row="2"/>
                                <CheckBox Content="Option 8" Grid.Column="1" Grid.Row="2"/>
                                <CheckBox Content="Option 9" Grid.Column="2" Grid.Row="2"/>
                            </Grid>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Window>

