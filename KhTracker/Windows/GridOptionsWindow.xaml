<Window x:Class="KhTracker.GridOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KhTracker"
        SizeToContent="WidthAndHeight" MinWidth="200" MinHeight="400"
        Title="Grid Tracker Options">

    <Window.Resources>
        <!-- Template Selector -->
        <local:OptionTemplateSelector x:Key="OptionSelector">
            <local:OptionTemplateSelector.CheckBoxTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Description}" IsChecked="{Binding DataContext.gridSettings[Description], RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay}" />
                </DataTemplate>
            </local:OptionTemplateSelector.CheckBoxTemplate>

            <local:OptionTemplateSelector.TextBoxTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Description}"/>
                        <TextBox Text="{Binding DefaultValue}" Width="200"/>
                    </StackPanel>
                </DataTemplate>
            </local:OptionTemplateSelector.TextBoxTemplate>
        </local:OptionTemplateSelector>
    </Window.Resources>

    <StackPanel>
        <!-- Wrapping StackPanel -->

        <ScrollViewer>
            <StackPanel>
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding CategoryName}" Background="#D3D3D3">
                                <!-- Submenu for each main category -->
                                <ItemsControl ItemsSource="{Binding SubCategories}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Expander Header="{Binding SubCategoryName}" Padding="10,0,0,0">
                                                <ItemsControl ItemsSource="{Binding Options}" ItemTemplateSelector="{StaticResource OptionSelector}" />
                                            </Expander>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Submit Button -->
        <Button Content="Submit" Margin="10" HorizontalAlignment="Right" Click="SubmitButton_Click"/>

    </StackPanel>
</Window>
